 "html": "<div class=\"container\">\n    <table border=\"1\" ; width=650>\n        <tr>\n        <td colspan=\"24\"><br><img src=\"/files/Screenshot from 2022-05-16 12-39-47.png\"><br><p style=\"font-size:10px;\"></td></tr>            \n         <tr> <td  colspan=\"24\">\n         <p style='text-align:center;font-size:20px'><b>LEAVE ENCASHMENT</b></p></td>\n         </tr>\n         <tr>\n        <td colspan=\"6\" width=25%><b>Employee ID</b></td>\n        <td colspan=\"6\" width=25%>{{doc.employee or ''}}</td>\n        <td colspan=\"6\" width=25%><b>Date</b></td>\n        <td colspan=\"6\" width=25%>{{frappe.utils.format_date(doc.encashment_date) or ''}}</td>\n   </tr>\n   <tr>\n        <td colspan=\"6\" width=25%><b>Employee  Name</b></td>\n        <td colspan=\"6\" width=25%>{{doc.employee_name or ''}} </td>\n        <td colspan=\"6\" width=25%><b>Leave Period</b></td>\n        <td colspan=\"6\" width=25%>{{doc.leave_period or ''}}</td>\n        \n        \n   </tr>\n   <tr>\n        <td colspan=\"6\" width=25%><b>Department</b></td>\n        <td colspan=\"6\" width=25%>{{doc.department or ''}} </td>\n        <td colspan=\"6\" width=25%><b>Company</b></td>\n        <td colspan=\"6\" width=25%>{{doc.company or ''}}</td>\n        \n        \n   </tr>\n   <tr>\n        <td colspan =\"24\" style=text-align:center><b>SALARY DETAILS</b></td>\n           \n    </tr>\n    <tr>\n        <td colspan=\"6\" width=25%><b>Basic</b></td>\n        {%set basic =frappe.db.get_value(\"Employee\",{'employee':doc.employee},['basic']) %}\n        <td colspan=\"6\" width=25%>{{basic or ''}} </td>\n         <td colspan=\"6\" width=25%><b>Leave Type</b></td>\n         <td colspan=\"6\" width=25%>{{doc.leave_type or ''}}</td>\n       \n        \n        \n        \n   </tr>\n   <tr>\n        <td colspan=\"6\" width=25%><b>HRA</b></td>\n        {%set hra =frappe.db.get_value(\"Employee\",{'employee':doc.employee},['hra']) %}\n        <td colspan=\"6\" width=25%>{{hra or ''}} </td>\n         <td colspan=\"6\" width=25%><b>Leave Balance</b></td>\n        <td colspan=\"6\" width=25%>{{doc.leave_balance or ''}}</td>\n        \n        \n        \n        \n   </tr>\n   <tr>\n        <td colspan=\"6\" width=25%><b>Other Allowance</b></td>\n        {%set all =frappe.db.get_value(\"Employee\",{'employee':doc.employee},['_other_allowance']) %}\n        <td colspan=\"6\" width=25%>{{all or ''}} </td>\n        <td colspan=\"6\" width=25%><b>Encashable Days</b></td>\n        <td colspan=\"6\" width=25%>{{doc.encashable_days or ''}}</td>\n        \n       \n   </tr>\n   <tr>\n        <td colspan=\"6\" width=25%><b>Fixed Total</b></td>\n        {%set fixed_total = basic+hra+all %}\n        <td colspan=\"6\" width=25%>{{fixed_total or ''}} </td>\n         <td colspan=\"6\" width=25%><b>Encashment Amount</b></td>\n        <td colspan=\"6\" width=25%>{{doc.encashment_amount or ''}}</td>\n        \n       \n   </tr>\n   <tr> \n        <td colspan=\"6\" width=25%><b>Air Ticket Allowance</b></td>\n        <td colspan=\"6\" width=25%>{{doc.air_ticket_allowance or ''}} </td>\n       \n        <td colspan=\"6\" width=25%><b>Total Encashment Amount</b></td>\n        <td colspan=\"6\" width=25%>{{doc.total_encashment_amount or ''}}</td>\n        \n    </tr>\n    \n    </table>\n\n    <p><b>Total Encashment Amount(In Words) : {{frappe.utils.money_in_words(doc.total_encashment_amount) or ''}}</b></p><br>\n    <p><b>I have received the amount QAR {{ doc.total_encashment_amount|default(0) | round(2) }}as my Total Leave Salary Encashment from the company and there is no other claim against company  so far.</b></p>\n    \n    <table>\n        <tr><td></td></tr>\n         <tr><td></td></tr>\n         <tr><td></td></tr>\n         <tr><td></td></tr>\n        <tr>\n            <td style = 'line-height: 1.9;'>\n                    Signature&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;_______________________________________<br>\n                    Name&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&